@using System.Web.Optimization
@using TV.Core.Users;
@using TV.Core.Context;
@using TV.Core.UserManagement;
@using TV.Tiskarna;
@using TV.TiskarnaVosahlo;
<!DOCTYPE html>
<html>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@Scripts.Render("~/bundles/tv")
@Styles.Render("~/Content/css")
@RenderSection("scripts", required: false)
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
</head>
    <body>
        <div class="container">
            <nav class="navbar navbar-default">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <div class="navbar-brand">@ViewBag.Title</div>
                    </div>
                    <div id="navbar" class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                        @{ if (UserContext.Context.IsInRole(TV.Core.Rights.Roles.ManageUsers))
                            {
                               <li>@Html.ActionLink("Users", "Index", "Users")</li>
                            }
                         }
                        </ul>
                        <ul class="nav navbar-nav navbar-right">
                            <li><a href="javascript:logout('@Url.Action("Logout", "Home")');"><span class="glyphicon glyphicon-log-out"></span>@Resource.LogOut</a></li>
                        </ul>
                    </div>
                </div>
            </nav>
            <div class="jumbotron">
                @RenderBody()
            </div>
        </div>
    </body>
</html>
